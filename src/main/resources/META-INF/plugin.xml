<idea-plugin>
    <id>com.github.jrhenderson1988.gitgutter</id>
    <name>Git Gutter</name>
    <vendor url="https://github.com/jrhenderson1988">Jonathon Henderson</vendor>

    <description><![CDATA[Allows some minor customisation of the VCS change markers in the editor's gutter]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationConfigurable instance="com.github.jrhenderson1988.gitgutter.config.GitGutterConfigurable"
                                 groupId="appearance"
                                 id="GitGutterConfigurable"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.jrhenderson1988.gitgutter.GitGutterApplicationListener"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>


    <actions>

    </actions>
</idea-plugin>